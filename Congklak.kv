		background_color: (1,1,1,1)
		padding: 10
        spacing: 10
		Label:
			id : title
			text : '[b]Congklak[/b]'
			font_size : 50
			markup : True
			size_hint: (1, 0.75)
			pos_hint: {'x': 0}
		Label:
			id : modelbl
			text : 'Select mode to play:'
			font_size : 20
			markup : True
			size_hint: (1, 0.25)
			pos_hint: {'x': 0}
		Button:
			id: MvPbtn
			pos_hint: {'x': 0.25}
			text: "Bot Minimax vs Player"
			size_hint: (0.5,0.5)
			font_size : 20
			background_color : (0.8,0.6,0.6,0.8)
			on_press : 
				CongklakDisplay.init("MvP")
				CongklakDisplay.start()
		Button:
			id: RvPbtn
			pos_hint: {'x': 0.25}
			text: "Bot Random vs Player"
