				text: "Hard"
				font_size: "40"
				background_color: (0,0,0,0.95)
				size_hint: None, None
				on_press: 
					CongklakDisplay.set_difficulty(6)
					CongklakDisplay.remove_difficulty_lay()
			Button:
				id: hardbtn
				pos: 125,280
				size: 550,150
				text: "Easy"
				font_size: "40"
				background_color: (0,0,0,0.95)
				size_hint: None, None
